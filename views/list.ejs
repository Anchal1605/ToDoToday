<%- include("header") -%>
    <div class="box" id="heading">
        <h1>
            <%=listTitle%>
        </h1>
    </div>
    <div class="box">

        <%newItems.forEach(item=> {%>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" name="check" value="<%=item._id%>" onChange="this.form.submit()">
                <p><%=item.name%></p>
            </div>
            <!--contains the hidden data you want to include when the form is submitted to the server.-->
            <input type="hidden" name="listName" value="<%=listTitle%>">
        </form>
        <%});%>



        <form class="item" action="/" method="post">
            <input type="text" name="newitem" placeholder="New task" autocomplete="off">
                <button type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>
    </div>

    <%-include("footer")-%>